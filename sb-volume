#!/usr/bin/sh

# Prints the current volume or ğŸ”‡ if muted.

val=$(amixer get Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')

if (( $val == 0 )); then
    icon="ğŸ”‡"
elif (( $val < 33 )); then
    icon="ğŸ”ˆ"
elif (( $val < 50)); then
    icon="ğŸ”‰"
elif (( $val < 100)); then
    icon="ğŸ”Š"
else
    icon="ğŸ”Š"
fi

padding=$(printf "%1.0d"$val)
echo "$icon$padding%"
